extends layout

block content
    .w3-card-4
        header.w3-container.w3-light-blue
            h3 Entidades
    .w3-container.w3-white
        table.w3-table.w3-striped
            tr
                th.w3-text-teal Sigla
                th.w3-text-teal Designação
                th.w3-text-teal Estado
                th.w3-text-teal sioe
                th.w3-text-teal Internacional
            tr
                td.w3-text-indigo= entidade.sigla
                td.w3-text-indigo= entidade.designacao
                td.w3-text-indigo= entidade.estado
                td.w3-text-indigo= entidade.sioe
                td.w3-text-indigo= entidade.internacional
    .w3-container.w3-white
        h3 Tipologias
        table.w3-table.w3-striped
            tr
                th.w3-text-teal Sigla
                th.w3-text-teal Designação
            each t in topologia
                tr
                    td.w3-text-indigo= t.sigla
                    td.w3-text-indigo= t.designacao
    .w3-container.w3-white
        h3 Atividade cuja a entidade é dona
        table.w3-table.w3-striped
            tr
                th.w3-text-teal Codigo
                th.w3-text-teal Titulo
            each d in dono
                tr
                    td.w3-text-indigo= d.codigo
                    td.w3-text-indigo= d.titulo
    .w3-container.w3-white
        h3 Atividade cuja a entidade é participante
        table.w3-table.w3-striped
            tr
                th.w3-text-teal Codigo
                th.w3-text-teal Titulo
            each p in participante
                tr
                    td.w3-text-indigo= p.codigo
                    td.w3-text-indigo= p.titulo
