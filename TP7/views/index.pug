extends layout

block content
  .w3-card-4
    header.w3-container.w3-light-blue
        h3 Filmes
  .w3-container.w3-white
    .w3-container
      span
        .left
          a.w3-button.w3-teal(href="/filmes/form") Adicionar filme
        .right
          a(href="/filmes?page="+(page-1))
            <em><</em>
          -var i = -2
          if page + i > 0
            a(href="/filmes?page=0")
              <em>0</em>
            <em>...</em>
          -for(; i < 3; i++)
            if page + i >= 0 && page + i <= numPages
              if i == 0
                a(href="/filmes?page=" + page)
                  b=(page+i)
                if (page + i) != numPages
                  <em>,</em>    
              else
                a(href="/filmes?page=" + (page + i))=(page+i)
                if (page + i) < numPages && i != 2
                  <em>,</em>  
          if page + i < numPages
            <em>...</em>
              a(href="/filmes?page=" + numPages)= numPages       
          a(href="/filmes?page="+(page+1)) 
            <em>></em>
      table.w3-table.w3-striped
          tr
            th(width="75%").w3-text-teal Titulo
            th(width="5%").w3-text-teal Ano
            th.w3-text-teal Opções
          each filme in filmes
            tr
              td(width="75%").w3-text-indigo
                a(href="/filmes/" + filme._id)= filme.title
              td(width="5%").w3-text-indigo= filme.year
              td
                button.w3-button.w3-blue-grey(onclick="apagaItem('" + filme._id + "')") Apagar
              td
                a(href='/filmes/form/' + filme.id).w3-button.w3-blue-grey Editar
    

                        