extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-light-blue
                h3 Gestor de Tarefas
            .w3-container
                form.w3-container(action="/adicionarTarefa" method='Post')
                    table.w3-table
                        tr
                            th(width="80%")
                                label.w3-text-teal
                                    b Descrição:
                            th
                                label.w3-text-teal
                                    b A fazer até:
                            th
                        tr 
                            td(width="80%")
                                input.w3-input.w3-border.w3-light-grey(type='text' name='descricao' required)
                            td
                                input.w3-input.w3-border.w3-light-grey(type='date' name='dataLimite' required)
                            td
                                input.w3-btn.w3-blue-grey(type='submit' value='Adicionar Tarefa')                     
                hr
            .w3-container.w3-light-blue
                h3 Tarefas agendadas
            .w3-conttainer.w3-white
                .w3-container
                    table.w3-table.w3-striped
                        tr
                            th(width="70%").w3-text-teal Descrição
                            th(width="17%").w3-text-teal Data a finalizar 
                            th     
                        - for(var i = 0; i < listaTarefas.length; i++)
                            tr
                                td(width="70%").w3-text-grey= listaTarefas[i].descricao
                                td(width="17%").w3-text-grey= listaTarefas[i].dataLimite
                                td 
                                    form(action=('/removerTarefa/'+i) method='Post')
                                        input.w3-btn.w3-blue-grey(class="deleteRequest" type='submit' value='Remover Tarefa')
            footer.w3-container.w3-teal
                address Gerado por Gestor de Tarefas
    script.
        document.onload = function(){document.getElementsByClassName('deleteRequest').forEach(el => el.method = 'delete')