extends layout

block content
  .w3-card-4
    header.w3-container.w3-light-blue
        h3 Musicas do aquivo sonoro
  a(href='form').w3-button.w3-blue-grey Adicionar musica
  label(id='message')
  .w3-conttainer.w3-white
                .w3-container
                    table.w3-table.w3-striped
                        tr
                            th(width="20%").w3-text-teal Titulo
                            th(width="20%").w3-text-teal Musico
                            th(width="20%").w3-text-teal Provincia
                            th(width="20%").w3-text-teal Localidade
                            th.w3-text-teal Opções
                            th     
                        each musica in musicas
                            tr
                                td(width="20%").w3-text-grey
                                  a(href='musica/' + musica.id)= musica.tit
                                td(width="20%").w3-text-grey= musica.musico
                                td(width="20%").w3-text-grey= musica.prov
                                td(width="20%").w3-text-grey= musica.local
                                td(width="10%").w3-text-grey
                                  button.w3-button.w3-blue-grey(onclick="apagaItem('" + musica.id + "')") Apagar
                                td(width="10%").w3-text-grey
                                  a(href='form/' + musica.id).w3-button.w3-blue-grey Editar
