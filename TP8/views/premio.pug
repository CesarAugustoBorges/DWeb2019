extends layout

block content
    .w3-card-4
        header.w3-container.w3-light-blue
            h3 Premio
        .w3-row.w3-padding
            .w3-half.w3-container
                h4 Categoria
                spany= premio.category
            .w3-half.w3-container
                h4 Ano
                span= premio.year
            .w3-container
                h4 Laureates:
                each laureate in premio.laureates
                    .w3-row.w3-margin
                        .w3-half.w3-container
                            div
                                i= laureate.motivation
                            span By : #{laureate.surname} #{laureate.firstname}        