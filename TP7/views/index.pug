extends layout

block content
  .w3-card-4
    header.w3-container.w3-light-blue
        h3 Filmes
  .w3-conttainer.w3-white
    .w3-container
        table.w3-table.w3-striped
            tr
              th(width="30%").w3-text-teal Titulo
              th(width="30%").w3-text-teal Géneros
              th.w3-text-teal Opções
            each filme in filmes
              tr
                td(width="30%").w3-text-teal
                  a(href="/filmes/" + filme._id)= filme.title
                td(width="30%").w3-text-teal
                  each genre in filme.genres
                    span=genre + '; '
                        