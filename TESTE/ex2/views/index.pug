extends layout

block content
  .w3-card-4
    header.w3-container.w3-light-blue
      h1 Lista de Entidades
    button.w3-button.w3-teal(onclick="window.history.back()") voltar atras
    a.w3-button.w3-teal(href='/') página inicial
    .w3-container.w3-light-grey
      table.w3-table-all
        tr
          th.w3-center Sigla
          th.w3-center Designação
        each tipologia in lista
          tr
            td.w3-center
              a(href="http://localhost:3000/entidade/" + tipologia.id)= tipologia.sigla
            td.w3-center= tipologia.designacao
