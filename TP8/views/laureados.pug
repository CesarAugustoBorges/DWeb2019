extends layout

block content
    .w3-card-4
        header.w3-container.w3-light-blue
            h3 Laureados
        .w3-container.w3-light-grey
            ul.w3-hoverable
                each laureate in laureates
                    li.w3-card-4.w3-padding
                        .w3-half.w3-container
                            h4 Nome:
                            span #{laureate.surname}, #{laureate.firstname}
                        .w3-container
                            h4 Pr√©mios:
                            each prize in laureate.prizes
                                .w3-row
                                    .w3-half.w3-container
                                        div
                                            span ano: #{prize.year}, categoria: #{prize.category}    